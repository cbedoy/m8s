<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="@dimen/common_padding"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <TextView
            android:text="Email"
            android:textSize="@dimen/common_title_size"
            android:textColor="@color/colorAccentDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/common_title_description_title" android:fontFamily="@font/roboto_medium"/>
    <TextView
            android:textSize="@dimen/common_description_size_big"
            android:textColor="@color/black_primary"
            android:text="carlos.bedoy@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/common_title_description_value" android:fontFamily="@font/roboto_light"/>

    <View
            android:layout_marginTop="8dp"
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
</LinearLayout>