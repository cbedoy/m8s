<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:padding="@dimen/common_padding"
              android:layout_height="wrap_content">


    <TextView
            android:layout_weight="1"
            android:text="Title"
            android:textSize="@dimen/common_title_size"
            android:textColor="@color/black_primary"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/common_switch_cell_title"
            android:fontFamily="@font/roboto"/>
    <Switch
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/common_switch_cell_state"
            tools:ignore="RtlHardcoded"/>
</LinearLayout>